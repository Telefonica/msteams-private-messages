{
  "name": "msteams-private-messages",
  "version": "0.1.1",
  "description": "send private messages to users in MSTeams",
  "main": "index.js",
  "scripts": {
    "start": "node index.js | ./node_modules/.bin/bunyan",
    "lint": "eslint . -f table .",
    "types": "tsc --build tsconfig.json",
    "test": "jest"
  },
  "keywords": [
    "Microsoft Teams",
    "bot",
    "messaging",
    "notifications"
  ],
  "repository": {
    "url": "https://github.com/Telefonica/msteams-private-messages"
  },
  "bugs": {
    "url": "https://github.com/Telefonica/msteams-private-messages/issues"
  },
  "author": {
    "email": "Lifecycle@telefonica.com",
    "name": "Software Lifecycle Team"
  },
  "maintainers": [
    {
      "name": "Manu Artero Anguita",
      "email": "manutero.developer@gmail.com"
    }
  ],
  "license": "ISC",
  "private": true,
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore: ${nextRelease.version} version notes\n\n[skip ci]\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.10",
    "@types/jest": "^26.0.20",
    "@types/js-yaml": "^4.0.0",
    "@types/restify": "^8.4.2",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "semantic-release": "^17.3.7",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "botbuilder": "^4.11.1",
    "bunyan": "^1.8.15",
    "dotenv": "^8.2.0",
    "js-yaml": "^4.0.0",
    "restify": "^8.5.1"
  }
}
